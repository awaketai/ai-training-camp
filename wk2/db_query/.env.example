# OpenAI API Key (required for natural language query generation - User Story 3)
OPENAI_BASE_URL=https://api.openai.com/v1
OPENAI_API_KEY=sk-your-api-key-here

# OpenAI API Base URL (optional - for custom endpoints like Azure OpenAI, local proxy, etc.)
# Examples:
#   Azure OpenAI: https://your-resource.openai.azure.com/
#   Local proxy: http://localhost:8080/v1
#   Default (if not set): https://api.openai.com/v1
# OPENAI_BASE_URL=https://api.openai.com/v1

# Database storage location (SQLite file in db_query directory)
DATABASE_URL=sqlite:///./db_query/db_query.db

# Backend server settings
BACKEND_HOST=0.0.0.0
BACKEND_PORT=8000

# Frontend dev server
FRONTEND_PORT=5173

# CORS settings (allow all for local development tool)
CORS_ORIGINS=*

# Logging level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Query execution settings
MAX_QUERY_RESULTS=1000
QUERY_TIMEOUT_SECONDS=30

# LLM settings
LLM_MODEL=gpt-4
LLM_TEMPERATURE=0.2
LLM_MAX_TOKENS=1000
